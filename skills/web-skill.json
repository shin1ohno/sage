{
  "$schema": "https://claude.ai/schemas/skill.json",
  "name": "sage-web",
  "displayName": "Sage - AIタスク管理アシスタント (Web版)",
  "version": "0.1.0",
  "description": "タスクを分析し、優先度を判定するAIタスク管理アシスタント（Web軽量版）",
  "author": "shin1ohno",
  "license": "MIT",
  "platforms": ["web"],
  "capabilities": {},
  "limitations": [
    "Apple Remindersへの直接追加は利用できません（コピー用テキストを提供）",
    "カレンダーからの空き時間確認は利用できません（手動入力が必要）",
    "Notion統合は利用できません（コピー用テキストを提供）"
  ],
  "tools": [
    {
      "name": "analyze_tasks",
      "description": "テキストからタスクを分析し、優先度と所要時間を判定します",
      "inputSchema": {
        "type": "object",
        "properties": {
          "input": {
            "type": "string",
            "description": "分析するタスクのテキスト（メール、メモ、会議録など）"
          }
        },
        "required": ["input"]
      }
    },
    {
      "name": "format_for_reminders",
      "description": "タスクをApple Reminders用のテキストにフォーマットします（手動コピー用）",
      "inputSchema": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "タスクのタイトル"
          },
          "notes": {
            "type": "string",
            "description": "タスクのメモ"
          },
          "dueDate": {
            "type": "string",
            "description": "期限（ISO 8601形式）"
          },
          "priority": {
            "type": "string",
            "enum": ["low", "medium", "high"],
            "description": "優先度"
          }
        },
        "required": ["title"]
      }
    },
    {
      "name": "format_for_notion",
      "description": "タスクをNotion用のテキストにフォーマットします（手動コピー用）",
      "inputSchema": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "タスクのタイトル"
          },
          "priority": {
            "type": "string",
            "description": "優先度"
          },
          "deadline": {
            "type": "string",
            "description": "期限"
          },
          "estimatedMinutes": {
            "type": "number",
            "description": "見積時間（分）"
          },
          "stakeholders": {
            "type": "array",
            "items": { "type": "string" },
            "description": "関係者リスト"
          }
        },
        "required": ["title"]
      }
    }
  ],
  "prompts": {
    "system": "あなたはsage（賢者）、AIタスク管理アシスタントです。ユーザーのタスクを分析し、優先度を判定します。Web版のため、Apple RemindersやNotionへの直接統合は利用できませんが、コピー用のテキストを提供します。日本語で応答してください。"
  }
}
