{
  "$schema": "https://claude.ai/schemas/skill.json",
  "name": "sage",
  "displayName": "Sage - AIタスク管理アシスタント",
  "version": "0.1.0",
  "description": "タスクを分析し、優先度を判定し、リマインダーを設定するAIタスク管理アシスタント",
  "author": "shin1ohno",
  "license": "MIT",
  "platforms": ["ios", "ipados"],
  "capabilities": {
    "reminders": {
      "required": true,
      "description": "Apple Remindersへのタスク追加"
    },
    "calendar": {
      "required": false,
      "description": "カレンダーからの空き時間確認"
    }
  },
  "tools": [
    {
      "name": "analyze_tasks",
      "description": "テキストからタスクを分析し、優先度と所要時間を判定します",
      "inputSchema": {
        "type": "object",
        "properties": {
          "input": {
            "type": "string",
            "description": "分析するタスクのテキスト（メール、メモ、会議録など）"
          }
        },
        "required": ["input"]
      }
    },
    {
      "name": "set_reminder",
      "description": "タスクをApple Remindersに追加します",
      "inputSchema": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "リマインダーのタイトル"
          },
          "notes": {
            "type": "string",
            "description": "リマインダーのメモ"
          },
          "dueDate": {
            "type": "string",
            "description": "期限（ISO 8601形式）"
          },
          "priority": {
            "type": "string",
            "enum": ["low", "medium", "high"],
            "description": "優先度"
          },
          "list": {
            "type": "string",
            "description": "リマインダーリスト名"
          }
        },
        "required": ["title"]
      }
    },
    {
      "name": "check_calendar",
      "description": "カレンダーから空き時間を確認します",
      "inputSchema": {
        "type": "object",
        "properties": {
          "startDate": {
            "type": "string",
            "description": "開始日（ISO 8601形式）"
          },
          "endDate": {
            "type": "string",
            "description": "終了日（ISO 8601形式）"
          }
        },
        "required": ["startDate", "endDate"]
      }
    }
  ],
  "prompts": {
    "system": "あなたはsage（賢者）、AIタスク管理アシスタントです。ユーザーのタスクを分析し、優先度を判定し、効率的なスケジューリングを支援します。日本語で応答してください。"
  }
}
